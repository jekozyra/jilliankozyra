<div id="page-title">
	<h1>Languages</h1>
</div>

<div id="table-div">
<table>
  <tr>
    <th>Language</th>
    <th>Original</th>
    <th class="narrow-col"></th>
    <th class="narrow-col"></th>
    <th class="narrow-col"></th>
  </tr>

<% @languages.each do |language| %>
  <tr>
    <td><%= language.language %></td>
    <td><%= language.original %></td>
    <td class="narrow-col"><%= link_to 'Show', language %></td>
    <td class="narrow-col"><%= link_to 'Edit', edit_language_path(language) %></td>
    <td class="narrow-col"><%= link_to 'Destroy', language, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New Language', new_language_path %>

</div>
