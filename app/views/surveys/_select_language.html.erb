<span class="language-option">
	<% if language.id == @survey.default_language_id %>
		<%= radio_button_tag "language", language.id, true, :class => "language-radio" %>
	<% elsif %>
		<%= radio_button_tag "language", language.id, false, :class => "language-radio" %>
	<% end %>
	<%= label_tag "language_#{language.id}", language.original %>
</span>