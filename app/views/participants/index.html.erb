<div id="page-title">
	<h1>Participants</h1>
</div>

<div id="table-div">
<table>
  <tr>
    <th>Name</th>
    <th>Original name</th>
    <th>Email</th>
    <th>Party</th>
    <th>Survey code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @participants.each do |participant| %>
  <tr>
    <td><%= participant.name %></td>
    <td><%= participant.original_name %></td>
    <td><%= participant.email %></td>
    <td><%= participant.party %></td>
    <td><%= participant.survey_code %></td>
    <td><%= link_to 'Show', participant %></td>
    <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
    <td><%= link_to 'Destroy', participant, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Participant', new_participant_path %>
</div>